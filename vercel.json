{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static",
      "config": {
        "root": "frontend",
        "buildCommand": "npm install && npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}